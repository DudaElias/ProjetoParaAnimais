
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CadastroCliente</title>

    <script type="text/javascript" src="~/Script/cadastro.js"></script>
    <link rel="stylesheet" href="~/Content/estilo.css" />
</head>
<body>
    <div class="header">
        <div class="logo"></div>
        <input type="checkbox" id="chk">
        <label for="chk" class="show-menu-btn">
            <i class="fas fa-bars"></i>
        </label>

        <ul class="menu">
            <a href="SobreNos">Sobre nós</a>
            <a href="Pergunta">FAQ</a>
            <a href="CadastroLoja">Loja</a>
            <a href="CadastroCliente">Cliente</a>
            <label for="chk" class="hide-menu-btn">
                <i class="fas fa-times"></i>
            </label>
        </ul>
    </div>
    <div class="box" id="boxCli">
        <label ID="Label1" Text="Já sou cadastrado:" class="lblLogin">Já sou cadastrado:</label>
        <form method="post" action="/Login/LoginCli">
            <input id="Text1" name="c.Nome" type="text" placeholder="Usuário" />
            <input id="Password1" name="c.Senha" type="text" placeholder="Senha" />
            <input id="Button1" type="submit" value="Entrar" class="btn" />
            <a href="CriarLoginCliente">Ainda não sou cadastrado</a>
        </form>
    </div>
</body>
</html>
