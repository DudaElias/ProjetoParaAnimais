<body>
    <div class="header">
        <a href="Principal"><div class="logo"></div></a>
        <input type="checkbox" id="chk">
        <label for="chk" class="show-menu-btn">
            <i class="fas fa-bars"></i>
        </label>

        <ul class="menu">
            <a href="LoginEm">Editar Dados</a>
            <a href="AdicionarProduto">Adicionar Produto</a>
            <a href="PedidosARealizar">Pedidos a Realizar</a>
            <a href="Principal">Sair</a>

            <label for="chk" class="hide-menu-btn">
                <i class="fas fa-times"></i>
            </label>

        </ul>
    </div>
    <div class="box" id="box">
        <form action="AdicionarProdutoVerdade" method="post">
            <label ID="Label1" runat="server" text="Adicionar Produto:" class="lblLogin">Adicionar Produto</label>
            <input autocomplete="off" required id="txtNomePro" name="p.Nome" type="text" placeholder="Nome" />
            <input autocomplete="off" required name="p.Imagem" type="url" id="img" placeholder="Imagem(deve ser online)" onblur="CarregarImagem()">
            <input autocomplete="off" required id="txtFiltro" type="text" name="n" placeholder="Filtro" maxlength="50"/>
            <input autocomplete="off" required id="txtDescricao" type="text" name="p.Descricao" placeholder="Descrição"/>
            <input autocomplete="off" required id="txtPreco" type="text" name="p.Preco" placeholder="Preço (00,00)" maxlength="10"  pattern="([0-9]{1,3}\.)?[0-9]{1,3},[0-9]{2}$"/>
            <input id="Button2" type="button" value="Cancelar" class="btn" />
            <input id="Button1" type="submit" value="Aplicar" class="btn" />
        </form>
    </div>

    <footer class="s-mPrincipal">
        <p class="fPetFeed">PetFeed</p>
        <ul class="menuFooterP">
            <li><a href="SobreNos">Sobre nós</a></li>
            <li><a href="Pergunta">Fale conosco</a></li>
        </ul>

        <p class="fDescubra">Descubra</p>
        <ul class="menuFooterD">
            <!--Fazer essa página se der tempo-->
