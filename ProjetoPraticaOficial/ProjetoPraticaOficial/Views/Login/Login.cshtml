}

<!DOCTYPE html>

<html>
<head>

    <link rel="stylesheet" type="text/css" href="~/Content/estiloDentro.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div class="header">
        <div class="logo"></div>
        <div class="menu-perfil">
            <input type="checkbox" id="chk-perfil">
            <label for="chk-perfil" class="show-menu-btn-perfil">
                <img src="~/Imagens/perfil.png">
            </label>

            <ul class="lateral">
                <a href="Perfil.aspx">Editar Dados</a>
                <a href="PrincipalDentro.aspx">Pesquisa</a>
