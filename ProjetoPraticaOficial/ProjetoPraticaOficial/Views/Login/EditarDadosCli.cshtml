
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditarDadosCli</title>
    <link rel="stylesheet" type="text/css" href="~/Content/estiloDentro.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">

</head>
<body>
    <div>
        <div class="header">
            <div class="logo"></div>
            <div class="menu-perfil">
                <input type="checkbox" id="chk-perfil">
                <label for="chk-perfil" class="show-menu-btn-perfil">
                    <img src="~/Imagens/perfil.png">
                </label>

                <ul class="lateral">
                    <a href="EditarDadosCli">Editar Dados</a>
                    <a href="LoginCli">Pesquisa</a>
                    <a href="#">Pedidos</a>
                    <a href="Pergunta">Ajuda</a>
                    <a href="Principal">Sair</a>
                </ul>
            </div>
        </div>
        <div class="box">
            <form action="EditarDadosCliente" method="post">
            <label ID="Label1" runat="server" Text="Editar Dados:" CssClass="lblLogin">Editar Dados:</label>
            <input id="txtNomeUsu" name="u.Nome" type="text" placeholder="Usuário" />
            <input id="txtCpf" name="u.Cpf" type="text" placeholder="CPF" />
            <input id="txtEmail" name="u.Email" type="email" placeholder="E-mail" />
            <input id="senha" name="u.Senha" type="password" placeholder="Senha" />
            <input id="Button2" type="button" value="Cancelar" class="btn" />
            <input id="Button1" type="submit" value="Aplicar" class="btn" />
                </form>
        </div>
    </div>
</body>
</html>
