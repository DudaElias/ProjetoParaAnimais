    <script type="text/javascript" src="~/Script/cadastro.js"></script>
    <script type="text/javascript">
        window.onload = function () {
            document.getElementById("Password1").onkeypress = function (event) {
                var txt = this.value;
                if (txt.length == 3 || txt.length == 7)
                    this.value += ".";
                else
                    if (txt.length == 11)
                        this.value += "-";
            }
        }
    </script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">
    <link rel="stylesheet" type="text/css" href="../Content/styleLoja.css" />
</head>
