    <script type="text/javascript">
        window.onload = function () {
            //deixar digitar apenas número
            document.getElementById("cpf").onkeypress = function () {
                var txt = this.value;
                if (txt.length == 3 || txt.length == 7)
                    this.value += ".";
                else
                    if (txt.length == 11)
                        this.value += "-";
            }
            document.getElementById("txtCelularCliente").onkeypress = function () {
                var txt = this.value;
                if (txt.length == 0)
                    this.value += "(";
                if (txt.length == 3)
                    this.value += ")";
                if (txt.length == 8)
                    this.value += "-";
                if (txt.length == 13)
                    this.value = this.value.substring(0, 10).replace("-", "") + "-" + this.value.substring(10);
                //quando apaga ele n volta
            }
        }

        function SomenteNumero(e) {
            var tecla = (window.event) ? event.keyCode : e.which;
            if ((tecla > 47 && tecla < 58)) 
                return true;
            else {
                if (tecla == 8 || tecla == 0) return true;
                else return false;
            }
        }
    </script>
